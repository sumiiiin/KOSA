package ch08.sec04;

public class RemoteControlExample {

	public static void main(String[] args) {
		
		// 인터페이스 변수 선언
		RemoteControl rc;
		
		// 인터페이스로 사용할 객체 연결
		rc = new Television();
		
		rc.turnOn();
		rc.setVolume(5);
		rc.turnOff();
		System.out.println();
		
		use(new Audio());
		
	}
	
	public static void use(RemoteControl rc) {
		rc.turnOn();
		rc.setVolume(5);
		rc.turnOff();
	}
}
