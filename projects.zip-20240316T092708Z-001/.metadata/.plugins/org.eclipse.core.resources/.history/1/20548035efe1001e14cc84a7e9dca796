package ch07.sec10.exam01;

public class PhoneExample {

	public static void main(String[] args) {
		
//		MobilePhone mp = new MobilePhone("홍길동") { // 추상클래스이기 때문에 new로 객체 생성을 못함
//		};
		
//		AndroidPhone ap = new AndroidPhone("홍길동");
		MobilePhone mp;
		mp = new AndroidPhone("홍길동");
		mp.turnOn(); 
		// 이것도 오버라이딩 어노테이션만 안 붙였지 같은 메소드 이름을 썼기 때문에 재 정의가 맞다
		mp.internetSeach();
		mp.turnOff();
		System.out.println();
		
		mp = new IPhone("홍수민");
//		mp.turnOnn(); 
		// 부모클래스에 대입한 자식객체는 자식 고유의 메소드를 사용할 수 없다.
		mp.internetSeach(); // 이건 재정의 한거라 사용 가능
//		mp.turnOffn();
		
		IPhone ip = new IPhone("홍수민");
		ip.turnOnn();
		ip.internetSeach();
		ip.turnOffn();

	}

}
